		ADR		R1,VETTORE1
		ADR		R2,VETTORE2
		LDR		R3,[R1]
		LDR		R4,[R2]
RITORNA	B		PRODOTTO
		
		
PRODOTTO
		ADD		R0,R0,R4
		ADD		R6,R6,#1
		CMP		R6,R3
		BEQ		INC
		BNE		PRODOTTO
		
		
INC
		MOV		R6,#0
		ADD		R1,R1,#4
		ADD		R2,R2,#4
		LDR		R3,[R1]
		LDR		R4,[R2]
		CMP		R3,#0
		BEQ		FINE
		CMP		R4,#0
		BEQ		FINE
		B		RITORNA
		
FINE		END
		
VETTORE1	DCD		2,5,4,3,2,1,0
VETTORE2	DCD		1,2,3,4,5,6,0
